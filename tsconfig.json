{
  "compilerOptions": {
    "target": "ES2016",
    "jsx": "react-jsx",
    "module": "commonjs",
    "baseUrl": "./src",
    "allowJs": true,
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": ["dist/**/*", "node_modules"]
}
